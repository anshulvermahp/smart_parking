<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Owner Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@24.5.0/build/css/intlTelInput.css">
    <style>
        body {
            font-family: 'Google Sans', Arial, sans-serif;
            background: #fff;
            color: #111;
        }

        .card-modern {
            border-radius: 14px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
        }

        .label {
            font-weight: 700;
            color: #222;
        }

        .profile-photo {
            width: 120px;
            height: 120px;
            border-radius: 16px;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        }

        .btn-primary-dark {
            background: #000;
            color: #fff;
            border: none;
        }

        .form-control {
            border-radius: 8px;
        }

        /* intl-tel-input styling */
        .iti {
            width: 100%;
            display: block;
        }

        .iti__country-list {
            z-index: 1050;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg py-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" href="#">
                <i class="bi bi-p-square-fill" style="font-size: 1.8rem;"></i>
                <span>Parking.com</span>
            </a>
            <div class="ms-auto">
                <a class="btn btn-outline-dark" href="/owners/profile">Back to profile</a>
            </div>
        </div>
    </nav>

    <main class="container my-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="card card-modern p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h3 style="margin:0;">Edit Owner Profile</h3>
                    </div>

                    <% if (typeof error !=='undefined' ) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                        <% } %>

                            <form action="/owners/edit-profile" method="POST" enctype="multipart/form-data">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="label">Username</label>
                                        <input class="form-control" type="text" name="username"
                                            value="<%= owner.username %>" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="label">Email</label>
                                        <input class="form-control" type="email" name="email" value="<%= owner.email %>"
                                            required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="label">Contact Number</label>
                                        <input class="form-control" type="text" id="contactNumber" name="contactNumber"
                                            value="<%= owner.contactNumber %>" />
                                        <div id="phone-error" class="text-danger small mt-1" style="display: none;">
                                            Please enter a valid phone number.</div>
                                        <input type="hidden" name="fullContactNumber" id="fullContactNumber">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="label">Proof of Ownership (image/file)</label>
                                        <input class="form-control" type="file" name="proofOfOwnership"
                                            accept="image/*" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="label">Profile Picture</label>
                                        <input class="form-control" type="file" name="profilePicture"
                                            accept="image/*" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="label">Current Password</label>
                                        <input class="form-control" type="password" name="oldPassword"
                                            placeholder="Leave blank to keep" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="label">New Password</label>
                                        <input class="form-control" type="password" name="password" />
                                    </div>
                                </div>
                                <div class="mt-4 d-flex gap-2 justify-content-center">
                                    <button class="btn btn-primary-dark px-4" type="submit">Save changes</button>
                                    <a href="/owners/profile" class="btn btn-outline-dark px-4">Cancel</a>
                                </div>
                            </form>
                </div>
            </div>

            <aside class="col-lg-4">
                <div class="card card-modern p-4 text-center align-items-center">
                    <% if (owner.profileUrl) { %>
                        <img src="<%= owner.profileUrl %>" alt="Profile" class="profile-photo mb-3" />
                        <% } else { %>
                            <div class="profile-photo mb-3" style="background:#f1f1f1; display:inline-block;"></div>
                            <% } %>
                                <h5 style="margin-bottom:0;">
                                    <%= owner.username %>
                                </h5>
                                <p class="text-muted small mb-2">
                                    <%= owner.email %>
                                </p>
                </div>
            </aside>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@24.5.0/build/js/intlTelInput.min.js"></script>
    <script>
        const phoneInput = document.querySelector("#contactNumber");
        const fullPhoneInput = document.querySelector("#fullContactNumber");
        const errorMsg = document.querySelector("#phone-error");
        const form = document.querySelector("form");

        const iti = window.intlTelInput(phoneInput, {
            initialCountry: "in",
            separateDialCode: true,
            utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@24.5.0/build/js/utils.js",
        });

        const handleChange = () => {
            if (phoneInput.value.trim()) {
                if (iti.isValidNumber()) {
                    errorMsg.style.display = "none";
                    phoneInput.classList.remove("is-invalid");
                    fullPhoneInput.value = iti.getNumber();
                } else {
                    errorMsg.style.display = "block";
                    phoneInput.classList.add("is-invalid");
                }
            } else {
                errorMsg.style.display = "none";
                phoneInput.classList.remove("is-invalid");
            }
        };

        phoneInput.addEventListener('change', handleChange);
        phoneInput.addEventListener('keyup', handleChange);

        form.addEventListener("submit", (e) => {
            if (phoneInput.value.trim() && !iti.isValidNumber()) {
                e.preventDefault();
                errorMsg.style.display = "block";
                phoneInput.classList.add("is-invalid");
                phoneInput.focus();
            } else {
                fullPhoneInput.value = iti.getNumber();
            }
        });
    </script>
</body>

</html>