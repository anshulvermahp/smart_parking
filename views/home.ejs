<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ParkSpot</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", Arial, sans-serif;
    }

    /* HERO BG */
    .hero {
      min-height: 90vh;
      background: url("/images/bg2.jpg") center/cover no-repeat;
      position: relative;
      display: flex;
      align-items: center;
    }

    .hero-overlay {
      background: rgba(0,0,0,0.15);
      position: absolute;
      inset: 0;
    }

    /* SEARCH CARD */
    .search-card {
      background: #fff;
      border-radius: 8px;
      padding: 32px;
      max-width: 520px;
      box-shadow: 0 20px 40px rgba(0,0,0,.15);
      position: relative;
      z-index: 2;
    }

    .tabs {
      display: flex;
      border-bottom: 1px solid #eee;
      margin-bottom: 25px;
    }

    .tab {
      flex: 1;
      text-align: center;
      padding: 12px;
      font-weight: 500;
      color: #555;
      cursor: pointer;
    }

    .tab.active {
      color: #0d6efd;
      border-bottom: 3px solid #0d6efd;
    }

    .search-title {
      font-size: 42px;
      font-weight: 700;
      line-height: 1.2;
      margin-bottom: 25px;
    }

    .search-input {
      height: 52px;
      font-size: 16px;
    }

    .btn-search {
      background: #ffd66e;
      border: none;
      color: #000;
      padding: 10px 26px;
      font-weight: 600;
      margin-top: 20px;
    }

    .btn-search:hover {
      background: #ffcb45;
    }

    /* NAVBAR */
    .navbar {
      background: #fff;
      border-bottom: 1px solid #eee;
    }

    .login-btn {
      background: #ffd66e;
      border-radius: 6px;
      padding: 6px 14px;
      font-weight: 600;
    }
  </style>
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand fw-bold fs-4" href="#">
      <i class="bi bi-geo-alt-fill text-warning"></i> ParkSpot
    </a>

    <ul class="navbar-nav ms-auto align-items-center">
      <li class="nav-item me-3"><a class="nav-link" href="#">Register </a></li>
      <li class="nav-item me-3"><a class="nav-link" href="#">Login</a></li>
      <li class="nav-item me-3"><a class="nav-link" href="#">about us </a></li>
      <li class="nav-item me-3">
        <i class="bi bi-telephone"></i> +91 74882 39471
      </li>
      <li class="nav-item">
        <a class="btn login-btn" href="#">Log in</a>
      </li>
    </ul>
  </div>
</nav>

<!-- HERO -->
<section class="hero">
  <div class="hero-overlay"></div>

  <div class="container">
    <div class="search-card">

      <!-- Tabs -->
      <div class="tabs">
        <div class="tab active">
          <i class="bi bi-car-front"></i><br>
          Find spot
        </div>
        <div class="tab">
          <i class="bi bi-house-door"></i><br>
          Rent spot
        </div>
      </div>

      <!-- Content -->
      <h1 class="search-title">
        Search parking spot<br>in seconds
      </h1>

      <!-- <input type="text"
        class="form-control search-input"
        placeholder="e.g. Bengaluru, Hyderabad, Chennai">

      <button class="btn btn-search">
        Search now
      </button> -->
      <form action="/map" method="GET">
  <input
    type="text"
    name="area"
    placeholder="Enter area name"
    required
  />
  <button type="submit">Find Parking</button>
</form>

    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
