<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg py-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
                    <path fill="#222" d="M12 2a10 10 0 100 20 10 10 0 000-20z" />
                </svg>
                <span style="margin-left:10px;color:#222;font-weight:700;">Parking.com</span>
            </a>
            <div class="ms-auto">
                <a class="btn btn-outline-dark" href="/map">Find parking</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Owner Dashboard</h1>
            <div>
                <a href="/owners/profile" class="btn btn-outline-dark me-2">Profile</a>
                <a href="/admin/add-parking" class="btn btn-primary">Add Parking</a>
                <a href="/logout" class="btn btn-danger ms-2">Logout</a>
            </div>
        </div>

        <h3>My Parking Locations</h3>
        <div class="row mt-3">
            <% if (parkings && parkings.length> 0) { %>
                <% parkings.forEach(function(p) { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <% if (p.images && p.images.length> 0) { %>
                                <img src="<%= p.images[0] %>" class="card-img-top" alt="<%= p.name %>"
                                    style="height: 200px; object-fit: cover;">
                                <% } else { %>
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                        style="height: 200px;">
                                        <span class="text-muted">No Image</span>
                                    </div>
                                    <% } %>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= p.name %>
                                            </h5>
                                            <p class="card-text text-muted mb-2">
                                                <small>
                                                    <%= p.address.street %>, <%= p.address.city %>
                                                </small>
                                            </p>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span><strong>Total Slots:</strong>
                                                    <%= p.totalSlots %>
                                                </span>
                                                <span><strong>Available:</strong>
                                                    <%= p.availableSlots %>
                                                </span>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <span><strong>Hourly:</strong> â‚¹<%= p.pricing.hourly %></span>
                                            </div>
                                            <div class="view">
                                                <a href="/dashboard/<%= p._id %>" class="btn btn-primary"
                                                    style="text-decoration: none; color: #fff;">View</a>
                                            </div>
                                        </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <div class="alert alert-info">
                                    You haven't added any parking locations yet. <a href="/admin/add-parking"
                                        class="alert-link">Add your first parking</a>.
                                </div>
                            </div>
                            <% } %>
        </div>
    </div>
</body>

</html>